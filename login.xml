<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25c8ec"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/idBtnLogin"
        android:layout_width="262dp"
        android:layout_height="37dp"
        android:layout_below="@id/idEdtPassword"
        android:backgroundTint="#FFFFFF"
        android:text="Login"

        android:textAllCaps="false"
        android:textColor="#25c8ec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="268dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toTopOf="@+id/idTVHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689"
        app:srcCompat="@drawable/logooo"
        android:background="#EBFFE643"

        />

    <TextView
        android:id="@+id/idTVHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="please enter your e-mail and password"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296" />

    <EditText
        android:id="@+id/idEdtPassword"
        android:layout_width="314dp"
        android:layout_height="47dp"
        android:layout_below="@id/idEdtUserName"

        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/idBtnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEdtUserName"
        app:layout_constraintVertical_bias="0.182" />

    <EditText
        android:id="@+id/idEdtUserName"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVHeader"
        android:hint="Enter your E-mail"
        android:inputType="textEmailAddress"

        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/idBtnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTVHeader"
        app:layout_constraintVertical_bias="0.322" />

</androidx.constraintlayout.widget.ConstraintLayout>
